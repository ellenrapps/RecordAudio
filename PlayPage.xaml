<Page
    x:Class="audiorec1222012.PlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:audiorec1222012"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White" BorderBrush="DarkSeaGreen"  BorderThickness="40" SizeChanged="ErAppSizeChanged">

        <SplitView Name="MySplitView" 
                   IsPaneOpen="False" 
                   DisplayMode="CompactOverlay" 
                   CompactPaneLength="85" 
                   OpenPaneLength="250" 
                   Visibility="Visible">

            <SplitView.Pane>
                <StackPanel Name="MyStackPanelMain" Background="DarkSeaGreen" Margin="0,0,0,0">
                    <StackPanel Name="MyStackPanelHamburger3" Orientation="Horizontal" Margin="0,0,0,0">
                        <Button Name="HamburgerButton3" 
                                FontFamily="Segoe MDL2 Assets" 
                                Content="&#xE700;"                                
                                Background="{x:Null}" 
                                FontSize="30"
                                Click="ButtonClick3" />
                    </StackPanel>

                    <StackPanel Name="MyStackPanelHome2" Orientation="Horizontal" Margin="0,5,0,0" ToolTipService.ToolTip="Home">
                        <Button Name="HomeButton2"
                                         FontFamily="Segoe MDL2 Assets" 
                                         FontSize="35" Content="&#xE80F;"
                                         Click="ButtonClick3"
                                         Background="{x:Null}" />
                        <TextBlock Text="Home" FontSize="16" VerticalAlignment="Center" Margin="40,0,0,0" TextWrapping="WrapWholeWords"/>

                    </StackPanel>

                    <StackPanel Name="MyStackPanelOpenAudioFile" Orientation="Horizontal" Margin="0,5,0,0" ToolTipService.ToolTip="Open Audio File">
                        <Button Name="OpenAudioFileButton"
                                         FontFamily="Segoe MDL2 Assets" 
                                         FontSize="35" Content="&#xE838;"
                                         Click="ButtonClick3"
                                         Background="{x:Null}" />
                        <TextBlock Text="Open Audio File" FontSize="16" VerticalAlignment="Center" Margin="40,0,0,0" TextWrapping="WrapWholeWords"/>

                    </StackPanel>

                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Viewbox StretchDirection="Both" Grid.Row="0">
                        <Image Source="300recordaudio.png"
                               Margin="150,150,150,150"/>
                    </Viewbox>

                    <Viewbox StretchDirection="Both" Grid.Row="1"
                             >
                        <Frame>
                            <MediaPlayerElement Name="ErMediaPlayer"
                                                AutoPlay="False"
                                                AreTransportControlsEnabled="True">

                                <MediaPlayerElement.TransportControls>
                                    <MediaTransportControls 
                                        IsZoomButtonVisible="False" 
				                        IsZoomEnabled="False"
				                        IsFullWindowButtonVisible="False"
				                        IsFullWindowEnabled="False"/>
                                    </MediaPlayerElement.TransportControls>
                            </MediaPlayerElement>
                        </Frame>
                    </Viewbox>
                </Grid>
            </SplitView.Content>

        </SplitView>


    </Grid>

</Page>


